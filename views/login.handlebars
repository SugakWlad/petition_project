
<h1>Please log in</h1>
<form id="registerform" method="post" action="/login">
	<div class="regdiv">
		<h3>Email Adress</h3>
		<input type="text" name="email" value="{{email}}">
		<h3>Password</h3>
		<input type="password" name="password">
		{{#if empty}}<p id="pempty">Please, fill all red spots in.</p>{{/if}}
		<p>{{#if error}}
			Something is wrong with your input! Please try again.
		{{/if}}</p>
		<button class="sign">LOG IN</button>
		<input type="hidden" name="_csrf" value="{{csrfToken}}">
	</div>
</form>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="/public/search_for_empty.js"></script>
